{"components/search/masthead":"\n<section class=\"masthead-item masthead-search\">\n  <div class=\"layout-container\">\n    <div class=\"masthead-item-info\">\n      <div class=\"masthead-item-content\">\n        <h1 class=\"masthead-search-title\">\n          {{#if result_count}}\n            {{lang 'search.results_query'}} <strong>\"{{forms.search.query}}\"</strong>\n          {{else}}\n            {{lang 'search.title'}}\n          {{/if}}\n        </h1>\n\n        <form class=\"masthead-search-form\" id=\"masthead-search\" action=\"{{urls.search}}\" data-validated-form data-masthead-form>\n          {{> core/forms/common/text prefill=(lang 'search.overlay_field') label=(lang 'search.overlay_field') name='search_query_adv' id='masthead_search_query' value=forms.search.query required=true}}\n          <button type=\"submit\" class=\"masthead-search-submit\">\n            <svg class=\"masthead-search-submit-icon\" role=\"img\">\n              <use xlink:href=\"#icon-search\"></use>\n            </svg>\n            <span class=\"show-for-sr\">{{lang 'search.submit'}}</span>\n          </button>\n        </form>\n      </div>\n    </div>\n  </div>\n</section>\n","core/forms/common/text":"\n<div class=\"form-field form-field-common form-field-text {{#if required}} form-required{{/if}}\" id=\"{{id}}\">\n  <label class=\"form-label\">\n    <span class=\"form-field-title\">\n      {{label}}\n      {{#if required}}<span class=\"required-text\">{{lang 'common.required'}}</span>{{/if}}\n    </span>\n    <span class=\"form-field-control\">\n      <input class=\"form-input\"\n        id=\"input-{{id}}\"\n        name=\"{{name}}\"\n        type=\"text\"\n        placeholder=\"{{prefill}}\"\n        {{#if value}}value=\"{{value}}\"{{/if}}\n        {{#if private_id}}data-field-type=\"{{private_id}}\"{{/if}}\n        {{#if required}}required{{/if}}\n        aria-required=\"{{required}}\">\n    </span>\n  </label>\n</div>\n"}

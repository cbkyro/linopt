{"components/header/dropdown-quick-cart":"<div class=\"header-dropdown dropdown-quick-cart {{#unless cart.items}}quick-cart-empty{{/unless}}\" data-quick-cart-content data-dropdown-menu data-cart-count=\"{{cart.items.length}}\">\n  <section class=\"dropdown-column dropdown-column-quick-cart\">\n    {{#if cart.items}}\n      {{#each cart.items}}\n        <div class=\"quick-cart-item\" data-quick-cart-item data-item-id=\"{{id}}\">\n          <div class=\"quick-cart-item-image-wrapper\">\n            <a class=\"quick-cart-item-image\" href=\"{{url}}\" title=\"{{name}}\" style=\"background-image: url({{getImage image '200' (cdn ../theme_settings.default_image)}})\">\n              {{#if image}}\n                <img src=\"{{getImage image '200'}}\" alt=\"{{image.alt}}\">\n              {{/if}}\n            </a>\n          </div>\n\n          <div class=\"quick-cart-item-details\">\n            <h1 class=\"quick-cart-item-title\">\n              <a href=\"{{url}}\">\n                {{{name}}} <span class=\"quick-cart-item-quantity\">&times; {{quantity}}</span>\n              </a>\n            </h1>\n\n            {{#if brand.name '!==' ''}}\n              <span class=\"quick-cart-item-brand\">{{brand.name}}</span>\n            {{/if}}\n\n            <span class=\"quick-cart-item-price\">{{price.formatted}}</span>\n          </div>\n\n          <div class=\"quick-cart-item-remove-wrapper\">\n            <a href=\"{{remove_url}}\" class=\"quick-cart-item-remove\" data-quick-cart-item-remove title=\"{{lang 'cart.quick_cart.remove'}}\">\n              <svg role=\"presentation\">\n                <use xlink:href=\"#icon-close\"></use>\n              </svg>\n            </a>\n          </div>\n        </div>\n      {{/each}}\n\n      <div class=\"quick-cart-totals\">\n        {{#if cart.sub_total.value '!==' cart.grand_total.value}}\n          <div class=\"cart-total-item\">\n            <span class=\"cart-total-item-label\">\n              {{lang 'cart.quick_cart.sub_total'}}\n            </span>\n            <span class=\"cart-total-item-value\">\n               {{cart.sub_total.formatted}}\n            </span>\n          </div>\n        {{/if}}\n\n        {{#if cart.taxes}}\n          {{#each cart.taxes}}\n            <div class=\"cart-total-item\">\n              <span class=\"cart-total-item-label\">\n                {{lang 'cart.quick_cart.additional_cost' name=name}}\n              </span>\n              <span class=\"cart-total-item-value\">\n                {{cost.formatted}}\n              </span>\n            </div>\n          {{/each}}\n        {{/if}}\n\n        {{#if cart.shipping_handling.shipping_cost}}\n          {{#if cart.shipping_handling.provider}}\n            <div class=\"cart-total-item\">\n              <span class=\"cart-total-item-label\">\n                {{lang 'cart.quick_cart.additional_cost' name=cart.shipping_handling.provider.description}}\n              </span>\n              <span class=\"cart-total-item-value\">\n                 {{cart.shipping_handling.shipping_cost.formatted}}\n              </span>\n            </div>\n          {{/if}}\n        {{/if}}\n        <div class=\"cart-total-item\">\n          <span class=\"cart-total-item-label\">\n            {{lang 'cart.quick_cart.total'}}\n          </span>\n          <span class=\"cart-total-item-value\">\n             {{cart.grand_total.formatted}}\n          </span>\n        </div>\n      </div>\n\n      <footer class=\"quick-cart-footer\">\n        <div class=\"quick-cart-footer-cell\">\n          <a href=\"{{urls.cart}}\" class=\"button secondary button-wide button-large\">\n            {{lang 'cart.quick_cart.view_cart'}}\n          </a>\n        </div>\n\n        <div class=\"quick-cart-footer-cell\">\n          <a href=\"{{urls.checkout.single_address}}\" class=\"button button-wide button-large\">\n            {{lang 'cart.quick_cart.checkout'}}\n          </a>\n        </div>\n      </footer>\n    {{else}}\n      <span class=\"quick-cart-empty\">\n        {{lang 'cart.quick_cart.empty'}}\n      </span>\n    {{/if}}\n  </section>\n</div>\n"}

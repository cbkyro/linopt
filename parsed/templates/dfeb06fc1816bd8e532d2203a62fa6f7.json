{"components/footer/modal-search":"\n<div id=\"modal-search-form\" class=\"search-modal-container\" data-modal-search>\n  {{> components/common/modal-close href=\"modal-search-form\" data=\"modal-search-close\"}}\n\n  <div class=\"modal-body\">\n    {{{snippet 'forms_search'}}}\n\n    <form class=\"modal-search\" id=\"modal-search\" action=\"{{urls.search}}\" data-validated-form-search>\n      {{> core/forms/common/text prefill=(lang 'search.overlay_field') label=(lang 'search.overlay_field') name='search_query_adv' id='header_search_query' value=forms.search.query required=true}}\n      <button type=\"submit\" class=\"modal-search-submit\">\n        <svg class=\"modal-search-submit-icon\" role=\"img\">\n          <use xlink:href=\"#icon-search\"></use>\n        </svg>\n        <span class=\"show-for-sr\">{{lang 'search.submit'}}</span>\n      </button>\n    </form>\n  </div>\n</div>\n","components/common/modal-close":"\n<a\n  href=\"#{{#if href}}{{href}}{{/if}}\"\n  class=\"modal-close {{#if class}}{{class}}{{/if}}\"\n  aria-label=\"{{lang 'common.modal.close'}}\"\n  {{#if data}}{{data}}{{/if}}>\n  <svg class=\"modal-close-icon\" role=\"presentation\">\n    <use xlink:href=\"#icon-close-thin\"></use>\n  </svg>\n</a>\n","core/forms/common/text":"\n<div class=\"form-field form-field-common form-field-text {{#if required}} form-required{{/if}}\" id=\"{{id}}\">\n  <label class=\"form-label\">\n    <span class=\"form-field-title\">\n      {{label}}\n      {{#if required}}<span class=\"required-text\">{{lang 'common.required'}}</span>{{/if}}\n    </span>\n    <span class=\"form-field-control\">\n      <input class=\"form-input\"\n        id=\"input-{{id}}\"\n        name=\"{{name}}\"\n        type=\"text\"\n        placeholder=\"{{prefill}}\"\n        {{#if value}}value=\"{{value}}\"{{/if}}\n        {{#if private_id}}data-field-type=\"{{private_id}}\"{{/if}}\n        {{#if required}}required{{/if}}\n        aria-required=\"{{required}}\">\n    </span>\n  </label>\n</div>\n"}

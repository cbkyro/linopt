{"components/blog/blog-item":"<article class=\"blog-item\">\n  <header class=\"blog-item-header\">\n    {{#if thumbnail}}\n      <a\n        class=\"blog-item-featured-image\"\n        href=\"{{url}}\"\n        style=\"background-image: url({{getImage thumbnail '1280x650'}})\">\n        <img class='show-for-sr' src=\"{{getImage thumbnail '1280x650'}}\" alt=\"{{thumbnail.alt}}\">\n      </a>\n    {{/if}}\n\n    <h4 class=\"blog-item-title\">\n      <a href=\"{{url}}\">{{limit title 300}}{{#if title.length '>' 300}}&hellip;{{/if}}</a>\n    </h4>\n\n    <div class=\"blog-item-header-caption\">\n      <time class=\"blog-item-posted-date\">{{date_published}}</time>\n\n      {{#if author}}\n        <span class=\"blog-item-author\">{{lang 'blog.posted_by' author=author}}</span>\n      {{/if}}\n    </div>\n  </header>\n\n  {{#if summary}}\n    <div class=\"blog-item-content\">\n      {{{summary}}}{{#if summary.length \">=\" 150}}&hellip;{{/if}}\n\n      <div class=\"blog-item-actions\">\n        {{#if this.tags}}\n          <div class=\"blog-item-tags\">\n            <span class=\"blog-item-tags-label\">{{lang 'blog.tags'}}</span>\n            <ul class=\"blog-item-tags-list\">\n              {{#each tags}}\n                <li class=\"blog-item-tag\">\n                  <a href=\"{{url}}\">#{{name}}</a>\n                </li>\n              {{/each}}\n            </ul>\n          </div>\n        {{/if}}\n\n        <a class=\"button secondary button-large\" href=\"{{url}}\">{{lang 'blog.read_more'}}</a>\n      </div>\n    </div>\n  {{/if}}\n</article>\n"}
